{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["NEXT_PUBLIC_TEST", "NODE_ENV"]
    },
    "lint": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
